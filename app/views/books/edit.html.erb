<h1>edit</h1>
<% if @book.errors.any? %>
  <h2>error</h2>
  <div id="error_explanation">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update Book' %>
<% end %>

<p>
  <%= link_to "Show", book_path(@book) %>
  |
  <a href="/books">Back</a>
</p>
